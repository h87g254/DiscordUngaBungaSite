@model ApplicationMessage.Models.User

@{
    ViewData["Title"] = "Profile";
}

<div class="container">

    <div class="card" style="max-width: 500px; margin: 0 auto;">

        <h2 style="text-align: center; margin-bottom: 1.5rem;">Your Profile</h2>

        <div style="text-align: center;">
            @if (!string.IsNullOrEmpty(Model.ProfilePicturePath))
            {
                <img src="@Model.ProfilePicturePath" alt="Profile Picture" class="profile-picture" />
            }
            else
            {
                <img src="/images/default-avatar.png" alt="Profile Picture" class="profile-picture" />
            }
        </div>

        <form method="post" asp-action="UpdateProfile" enctype="multipart/form-data">
            <input type="text" name="username" value="@Model.Username" placeholder="Username" required />

            <input type="file" name="profilePicture" accept="image/*" />

            <p style="margin-top: 1rem; text-align: center; font-size: 0.9rem; color: #6c757d;">
                Your ID: <strong>@Model.Id</strong>
            </p>

            <button type="submit">Save Changes</button>
        </form>

    </div>

</div>
